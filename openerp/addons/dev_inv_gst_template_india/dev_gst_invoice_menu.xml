<?xml version="1.0" encoding="utf-8"?>
    <openerp>
        <data>
            <report id = "report_gst_invoice_menu"
                    model = "account.invoice"
                    string = "GST invoice report"
                    report_type = "qweb-pdf"
                    name = "dev_inv_gst_template_india.gst_invoice_template_report_id"  
                    file = "dev_inv_gst_template_india.gst_invoice_template_report_id"
                    />
                    
            <record id="paperformat_payslip_sale" model="report.paperformat">
            <field name="name">US Letter</field>
            <field name="default" eval="True" />
            <field name="format">custom</field>
            <field name="page_height">297</field>
            <field name="page_width">210</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">32</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="header_spacing">32</field>
            <field name="dpi">90</field>
        </record>
        
            
            <record id="dev_inv_gst_template_india.report_gst_invoice_menu" model="ir.actions.report.xml">
                <field name="paperformat_id" ref="dev_inv_gst_template_india.paperformat_payslip_sale" />
            </record>
            
             <template id="external_layout_invoice">

            <t t-call="dev_inv_gst_template_india.external_layout_inv_header" />
            <t t-raw="0" />
        </template>
        
         <template id="external_layout_inv_header">
            <div class="header">
                <div class="row" >
                        <table width="100%">
                            <tr>
                                <td >
                                <center>
                                    <t t-if="company.name">
                                        <h2><t t-esc="company.name"/></h2>
                                    </t>
                                    <t t-if="company.street">
                                        <t t-esc="company.street"/>
                                    </t>
                                    <t t-if="company.street2">
                                        , <t t-esc="company.street2"/><br/>
                                    </t>
                                    <t t-if="company.state_id.name">
                                         <t t-esc="company.state_id.name"/>
                                    </t>
                                    <t t-if="company.country_id">
                                        , <t t-esc="company.country_id.name"/>
                                    </t>
                                    <t t-if="company.zip">
                                        <t t-esc="company.zip"/>
                                    </t>
                                    <br/>
                                    <t t-if="company.company_registry">
                                      <b> GSTIN <t t-esc="company.company_registry"/></b>
                                    </t>
                                    </center>
                                </td>
                            </tr>
                        </table>
                </div>
            </div>
         </template>
   
</data>
 </openerp>
    



