<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="hr_attendance.view_attendance_form" model="ir.ui.view">
            <field name="name">hr.attendance.form</field>
            <field name="model">hr.attendance</field>
            <field name="arch" type="xml">
                <form string="Employee attendances">
			    <header>
                   <field name="state" widget="statusbar" statusbar_visible="draft,validated" statusbar_colors='{"draft":"blue"}'/>
                </header>
                    <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="name"/>
                        <field name="action"/>
                        <field name="action_desc"/>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>
	</data>
</openerp>
